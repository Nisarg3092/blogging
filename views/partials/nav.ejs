<head>
  <style>
   .btn{
        min-width: 8rem;
        height: auto;
        font-size: auto;
        margin-block: auto;
        margin-right: auto;
        color: #f6f6f6;
        border: 1px solid #f6f6f6;
    }
  </style>
</head>

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link active" href="/user/add-blog">Add Blog</a>
          </li>

          <li class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              My Account
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/user/blogs">Edit Blogs</a></li>
              <li><a class="dropdown-item" href="/user/draft-blog">Draft</a></li>
              <li><a class="dropdown-item" href="/logout">Log Out</a></li>
            </ul>
          </li>
          </ul>
          <% if (user.role == "ADMIN") { %>  
            <div class="d-flex me-2">
                <a class="nav-link admin-color" href="/admin">Admin</a>
            </div>
          <% } %>
          <% } else{ %>
            <ul  class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/signup">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signin">Sign In</a>
            </li>
            <% } %>
      </ul>
      <form class="d-flex" role="search" method="get" action="/search">
        <input class="form-control me-2" type="search" name="title" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

<% if(locals.error){ %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
  <% } %>

  <% if(locals.message){ %>
    <div class="container mt-4">
      <div class="alert alert-success" role="alert">
        <%= locals.message %>
      </div>
    </div>
    <% } %>

